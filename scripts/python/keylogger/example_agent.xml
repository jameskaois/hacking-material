<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.yourname.volhelper</string>

  <key>ProgramArguments</key>
  <array>
    <string>/usr/bin/python3</string>         <!-- replace with `which python3` -->
    <string>/usr/local/bin/vol_helper.py</string>
  </array>

  <key>RunAtLoad</key><true/>
  <key>KeepAlive</key><true/>

  <key>StandardOutPath</key>
  <string>/tmp/volhelper_stdout.log</string>
  <key>StandardErrorPath</key>
  <string>/tmp/volhelper_stderr.log</string>
</dict>
</plist>
